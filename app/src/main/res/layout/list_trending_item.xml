<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/img_owner"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img_owner"
        android:layout_toEndOf="@id/img_owner"
        android:layout_toRightOf="@id/img_owner">

        <TextView
            android:id="@+id/repo_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            tools:text="alksdjfklj"/>

        <TextView
            android:id="@+id/desc"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:textSize="16sp"
            android:textColor="@color/gray_icon"
            tools:text="aksjdlfjalksdj"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/stars"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_star_filled_small"
                android:drawablePadding="2dp"
                android:textSize="12sp"
                android:textColor="@color/gray_icon"
                tools:text="234"/>

            <TextView
                android:id="@+id/forks"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_fork_small"
                android:drawablePadding="2dp"
                android:textSize="12sp"
                android:textColor="@color/gray_icon"
                tools:text="34"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>